[Unit]
Description=Phosphor Dump Manager

[Service]
ExecStartPre=/bin/sh -c 'mkdir -p {BMC_DUMP_PATH}'
ExecStart=/usr/libexec/phosphor-dump-manager/phosphor-dump-manager
SyslogIdentifier=phosphor-dump-manager
Restart=always
Type=dbus
BusName=xyz.openbmc_project.Dump.Manager

[Install]
WantedBy=multi-user.target
